<h1>編集</h1>
<%= form_with model: @order, local: true do |form| %>
  <div>
    <%= form.label :customer_name, "納入先" %>
    <%= form.select :customer_name, @customer_names, {selected: @customer.name}, {class: "flexselect"} %>
  </div>
  <div>
    <%= form.label :product_name, "製品名" %>
    <%= form.select :product_name, @product_names, { selected: @product.name}, {class: "flexselect"}  %>
  </div>
  <div>
    <%= form.label :process, "工程" %>
    <%= form.select :process,Order.processes_i18n.invert %>
  </div>
  <div>
    <%= form.label :delivery_date, "納品希望日" %>
    <%= form.text_field :delivery_date ,id:"date-form" %>
  </div>
  <div>
    <%= form.label :processor_name, "加工先" %>
    <%= form.select :processor_name, @processor_names, { selected: @processor.name}, {class: "flexselect"}  %>
  </div>
  <div>
    <%= form.label :drawing_number_name, "図面番号" %>
    <%= form.text_field :drawing_number_name, name: "drawing_number[name]", value: @drawing_number.name %>
  </div>
  <div>
    <%= form.label :comment, "備考" %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit "更新" %>
  </div>
<% end %>

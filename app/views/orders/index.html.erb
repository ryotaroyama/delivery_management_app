<h1>納入先</h1>
<% @orders.each do |order| %>
  <p>
    <button  data-toggle="modal" data-target="#exampleModal">
      <span class="screen"
        data-order_product_name="<%= order.product_name %>"
        data-order_delivery_date="<%= order.delivery_date %>"
        data-order_comment="<%= order.comment %>">
        <%= order.customer_name %>
      </span>
    </button>
    <%= link_to "詳細", order %>
    <%= link_to "編集", edit_order_path(order) %>
    <%= link_to "終了", order_display_orders_path(order), method: :delete %>
  </p>
<% end %>
<%= link_to "登録画面", new_order_path %>
<%= render 'modal' %>
